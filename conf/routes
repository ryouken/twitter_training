# Default
GET     /                           controllers.HomeController.index
GET     /count                      controllers.CountController.count
GET     /message                    controllers.AsyncController.message

# Tweet
GET     /tweet/timeline             controllers.TweetController.timeline
GET     /tweet/mylist               controllers.TweetController.mylist
GET     /tweet/edit                 controllers.TweetController.edit
POST    /tweet/create               controllers.TweetController.create
POST    /tweet/remove/:id           controllers.TweetController.remove(id: Int)

# JSON Tweet API
GET     /json/tweet/timeline         controllers.JsonTweetController.timeline
GET     /json/tweet/mylist           controllers.JsonTweetController.mylist
POST    /json/tweet/create           controllers.JsonTweetController.create
POST    /json/tweet/remove/:id       controllers.JsonTweetController.remove(id: Int)

# User
GET     /user/list                  controllers.UserController.list
GET     /user/edit                  controllers.UserController.edit
POST    /user/create                controllers.UserController.create
POST    /user/update                controllers.UserController.update
POST    /user/remove/:id            controllers.UserController.remove(id: Int)
GET     /user/register              controllers.UserController.register
GET     /user/login                 controllers.UserController.login
GET     /user/logout                controllers.UserController.logout
GET     /user/authentication        controllers.UserController.authenticate

# JSON User API
GET     /json/user/list             controllers.JsonUserController.list
GET     /json/user/edit             controllers.JsonUserController.edit
POST    /json/user/create           controllers.JsonUserController.create
POST    /json/user/update           controllers.JsonUserController.update
POST    /json/user/remove/:id       controllers.JsonUserController.remove(id: Int)
GET     /json/user/logout           controllers.JsonUserController.logout
GET     /json/user/authentication   controllers.JsonUserController.authenticate

# Follow
GET     /follow/list                controllers.FollowController.followlist
GET     /followed/list              controllers.FollowController.followedlist
POST    /follow/create              controllers.FollowController.create(followed_id: Int)
POST    /follow/remove/:id          controllers.FollowController.remove(id: Int)

# JSON Follow API
GET     /json/follow/list           controllers.JsonFollowController.followlist
GET     /json/followed/list         controllers.JsonFollowController.followedlist
POST    /json/follow/create         controllers.JsonFollowController.create(followed_id: Int)
POST    /json/follow/remove/:id     controllers.JsonFollowController.remove(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
